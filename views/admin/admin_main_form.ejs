<%- include('../partials/navbar') -%>


<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <script src="script.js"></script>
</head>

<body>
<div class="container">

    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
              <h1>Admin Main Form</h1>
              <hr>

              <div>
                <h1 style="text-allign:right"><%=publication.publication_name%></h1>
              </div>
              <div style="width: 50%">
              <form action = "/adminMainForm" class = "postform" method = "POST">
                <input type="hidden" name="pub_name" value="<%=publication.publication_name%>">
                <input type="hidden" name="old_student_leader" value="<%=publication.student_leader%>">
                <input type="hidden" name="old_advisor" value="<%=publication.advisor_email%>">
                <label for = "publication_name"> Publication Name: </label>
                 <input type = "text" class="form-control" placeholder="Please enter name of publication" data-error="please enter name of publication" id = "new_publication_name" name = "new_publication_name" value = "<%=publication.publication_name%>"> <br>
                <label for = "advisor_email"> Advisor Email: </label>
                  <input type = "text" class="form-group form-control" placeholder="Please enter the email of current advisor" data-error="advisor needed" id = "advisor_email" name = "advisor_email" value = <%=publication.advisor_email%>>
                <label for = "student_leader"> Student Leader: </label>
                  <input type = "text" class="form-group form-control" placeholder="Please enter the email of Student Leader" data-error="student leader needed" id = "student_leader" name = "student_leader" value = <%=publication.student_leader%>>
                  <%for(let i=0;i<publication.editions.length;i++){%>
                    <label for = "edition_<%=i+1%>">edition #<%=i+1%></label>
                    <%if(publication.editions[i].approved == true){%>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="edition_<%=i+1%>" checked disabled>
                        <label class="form-check-label" for="edition_<%=i+1%>">
                          Approved by Advisor
                        </label>
                      </div>
                    <%}else{%>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="edition_<%=i+1%>" disabled>
                        <label class="form-check-label" for="edition_<%=i+1%>">
                          Not Approved by Advisor
                        </label>
                      </div>
                      <%}%>
                  <%}%>
                  <br>
                  <br>
                  <input type = "submit" class="btn btn-primary" value = "Save">
              </form>
              <br>
            </div>

            </div>
        </div>
    </div>

</div>
</body>
