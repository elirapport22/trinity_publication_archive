<%- include('../partials/navbar') -%>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <script src="script.js"></script>
</head>

<body>
<div class="container">

    <div class="row">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
              <h1><%=publication%></h1>
              <hr>


              <section>

              <form action="/uploadfile" enctype="multipart/form-data" method="POST">
                <label for = "myFile">Select File to Upload</label>
                 <input type="file" name="myFile" />
                 <input type="submit" value="Upload a file" required/>
              </form>
              </section>


              <form action = "/student_publication_admin_form" class = "postform" method = "POST">

                <label for = "pdf_link">Publication Date: </label>
                <input type = "hidden" name="publicationID" value="<%=publication%>">
                 <input type = "text" class="form-control" placeholder="Please enter date of publication" data-error="date of publication is required." id = "date" name = "form_date" value = ""> <br>
                 <label for = "date"> Link to your pdf (temporary):</label>
                  <input type = "text" class="form-group form-control" placeholder="Please enter link to PDF" data-error="image required." id = "pdf" name = "pdflink" value = "">
                  <br>
                  <h2>topics covered</h2>
                  <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                    <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off" value="music" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck1">Music</label>

                    <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off" value="science" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck2">Science</label>

                    <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off" value="culture" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck3">Culture</label>

                    <input type="checkbox" class="btn-check" id="btncheck4" autocomplete="off" value="art" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck4">Art</label>

                    <input type="checkbox" class="btn-check" id="btncheck5" autocomplete="off" value="student life" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck5">Student Life</label>

                    <input type="checkbox" class="btn-check" id="btncheck6" autocomplete="off" value="politics" name="topics covered">
                    <label class="btn btn-outline-primary" for="btncheck6">Politics</label>
                  </div>

                  <br>
                  <br>
                  <input type = "submit" class="btn btn-primary" value = "Submit for Approval by Advisor">
              </form>
              <br>
            </div>
        </div>
    </div>

</div>
</body>
